@model DawamApp.Models.UserAccount
@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow p-4">
    <h3 class="text-center mb-4" style="color:black;">Create Account</h3>

                <form asp-action="Register" method="post">
                    <div class="row mb-3">
                        <div class="col">
                            <label>First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <div class="col">
                            <label>Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>

                    <div class="mb-3">
                        <label>Confirm Password</label>
                        <input type="password" name="ConfirmPassword" class="form-control" required />
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="text-danger text-center">@ViewBag.Error</div>
                    }

                    <button type="submit" class="btn btn-success w-100 mt-3">Create Account</button>
                </form>

                <div class="text-center mt-3">
                    <span>Already have an account?</span>
                    <a asp-action="Login" class="text-decoration-none">Login here</a>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow p-4">
                <!-- Title in black -->
                <h3 class="text-center mb-4" style="color:black;">Login</h3>

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="text-danger text-center">@ViewBag.Error</div>
                    }

                    <!-- Button matching navbar gradient -->
                    <button type="submit" class="btn w-100 mt-3" style="border-radius:0px; background: linear-gradient(to right, #224587, #3466bc); color:white;">
                        Login
                    </button>
                </form>

                <div class="text-center mt-3">
                    <span>Don't have an account?</span>
                    <a asp-action="Register" class="text-decoration-none">Create one</a>
                </div>
            </div>
        </div>
    </div>
</div>

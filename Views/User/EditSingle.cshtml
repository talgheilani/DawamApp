@model DawamApp.Models.EmployeeStatus

@{
    ViewData["Title"] = "Edit Employee Status";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<style>
    /* Light blue rectangle for form title */
    .header-bar {
        background-color: #3466bc29; 
        padding: 10px 15px;
        border-radius: 5px;
        margin-bottom: 15px;
        display: flex;
        justify-content: center; 
        align-items: center;    
    }

    /* Center card on page */
    .center-card {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
    }

    /* Card styling */
    .card-status {
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 5px;
        width: 100%;
        max-width: 600px;
    }

    /* White inputs for calendar fields */
    input.flatpickr-input {
        background-color: #fff !important;
        color: #000 !important;
    }

    /* Save button styling */
    .btn-save {
        background: linear-gradient(to right, #224587, #3466bc);
        color: white;
        border-radius: 0;
    }
</style>

<div class="container center-card">
    <div class="card card-status">
        <!-- Form title -->
        <div class="header-bar">
            <h2 class="mb-0">Edit Employee Status</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="EditSingle" method="post" asp-route-id="@Model.Id">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="EmployeeName" class="form-label"></label>
                <input asp-for="EmployeeName" class="form-control" readonly />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="Training" selected="@(@Model.Status == DawamApp.Models.StatusType.Training)">Training</option>
                    <option value="Discharge" selected="@(@Model.Status == DawamApp.Models.StatusType.Discharge)">Discharge</option>
                    <option value="Holiday" selected="@(@Model.Status == DawamApp.Models.StatusType.Holiday)">Holiday</option>
                    <option value="Duty" selected="@(@Model.Status == DawamApp.Models.StatusType.Duty)">Duty</option>
                    <option value="Workshop" selected="@(@Model.Status == DawamApp.Models.StatusType.Workshop)">Workshop</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input type="text" name="StartDateStr" class="form-control flatpickr" 
                       value="@Model.StartDate.ToString("dd/MM/yyyy")" placeholder="dd/MM/yyyy" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input type="text" name="EndDateStr" class="form-control flatpickr" 
                       value="@Model.EndDate.ToString("dd/MM/yyyy")" placeholder="dd/MM/yyyy" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Edit" class="btn btn-secondary" style="border-radius:0">Back to List</a>
                <button type="submit" class="btn btn-save">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Initialize flatpickr for date inputs
        flatpickr(".flatpickr", {
            dateFormat: "d/m/Y",
            allowInput: true,
        });
    </script>
}

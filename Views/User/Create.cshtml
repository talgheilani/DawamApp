@model DawamApp.Models.EmployeeStatus

@{
    ViewData["Title"] = "Add New Employee Status";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    /* Light blue rectangle for form title */
    .header-bar {
    background-color: #3466bc29; /* light blue from navbar palette */
    padding: 10px 15px;
    border-radius: 5px;
    margin-bottom: 15px;
    display: flex;
    justify-content: center; /* center horizontally */
    align-items: center;     /* center vertically */
}

</style>

<div class="container mt-4">

    <!-- Light blue rectangle for form title -->
    <div class="header-bar">
        <h2 class="mb-0">Add New Employee Status</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="EmployeeName" class="form-label"></label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Training">Training</option>
                            <option value="Discharge">Discharge</option>
                            <option value="Holiday">Holiday</option>
                            <option value="Duty">Duty</option>
                            <option value="Workshop">Workshop</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input type="text" name="StartDateStr" class="form-control" placeholder="dd/MM/yyyy" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input type="text" name="EndDateStr" class="form-control" placeholder="dd/MM/yyyy" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn text-white" style="background-color:#224587; border-radius:0;">
                        Save
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

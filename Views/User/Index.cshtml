@model DawamApp.Models.EmployeeStatus
@{
    ViewData["Title"] = "Employee Status - DawamApp";
    var statuses = Enum.GetValues(typeof(DawamApp.Models.StatusType)).Cast<DawamApp.Models.StatusType>();
}

<h2>Submit Your Status</h2>

<form asp-action="Index" method="post" class="mb-4">
    <div class="mb-3">
        <label asp-for="EmployeeName"></label>
        <input asp-for="EmployeeName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select" required>
            <option value="">-- Select Status --</option>
            @foreach (var status in statuses)
            {
                <option value="@status">@status</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" required min="2020-01-01" max="2100-12-31" />
    </div>

    <div class="mb-3">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" required min="2020-01-01" max="2100-12-31" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<hr />

<h3>Existing Records</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Statuses)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.Status</td>
                <td>@item.StartDate:yyyy-MM-dd</td>
                <td>@item.EndDate:yyyy-MM-dd</td>
            </tr>
        }
    </tbody>
</table>

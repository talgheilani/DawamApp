@{
    ViewData["Title"] = "Home";
}

<div class="home-container">
    <div class="text-container">
        <h1>Welcome to</h1>
        <h1>Dawam!</h1>
    </div>
    <div class="image-container">
        <img src="~/images/employee.png" alt="Employee" class="blur-edge">
    </div>
</div>

<style>

    .home-container {
        position: relative;
        height: 100vh;
        width: 100%;
        background-color: white;
        overflow: hidden;
    }

    /* Text styling */
    .text-container {
        position: absolute;
        left: 5%;
        top: 40%;
        text-align: left;
        z-index: 2;
    }

    .text-container h1 {
        margin: 0;
        font-size: 4rem; /* slightly bigger */
        font-weight: 900; /* bold */
        color: #224587;
    }

    .image-container {
        position: absolute;
        top: 0;
        right: 0;
        height: 95%;
    }

    .image-container img {
        height: 95%;
        object-fit: cover;
    }

    /* Blur/fade starting from middle of the page */
    .blur-edge {
        mask-image: linear-gradient(to left, rgba(0,0,0,1) 50%, rgba(0,0,0,0) 100%);
        -webkit-mask-image: linear-gradient(to left, rgba(0,0,0,1) 50%, rgba(0,0,0,0) 100%);
    }
</style>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    // Get user info from session
    var firstName = HttpContextAccessor.HttpContext.Session.GetString("FirstName");
    var lastName = HttpContextAccessor.HttpContext.Session.GetString("LastName");
    var isLoggedIn = !string.IsNullOrEmpty(firstName) && !string.IsNullOrEmpty(lastName);
}

<!-- Top navbar for Ministry logo -->
<nav class="navbar navbar-expand-lg navbar-light bg-light py-2">
    <div class="container-fluid">
        <div class="ms-auto">
            <img src="~/Images/logo-mem.svg" alt="Ministry Logo" style="height:50px;">
        </div>
    </div>
</nav>

<!-- Main navbar with buttons -->
<nav class="navbar navbar-expand-lg shadow-sm" style="background: linear-gradient(to right, #224587, #3466bc);">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
            <i class="bi bi-calendar-check-fill me-2"></i> DawamApp
        </a>

        <!-- Toggle for small screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Links aligned left -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Create">
                        <i class="bi bi-pencil-square me-1"></i> Fill Form
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-bar-chart-line me-1"></i> Dashboard
                    </a>
                </li>
            </ul>

            <!-- Right side: login/logout -->
<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
    @if (isLoggedIn)
    {
        <li class="nav-item d-flex align-items-center me-2 text-white">
            <i class="bi bi-person-circle me-1"></i> Hello, @firstName @lastName
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-right me-1"></i> Sign Out
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </a>
        </li>
    }
</ul>

        </div>
    </div>
</nav>
